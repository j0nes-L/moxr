---
import MOXRGlbExplorerTemplateElement from "./MOXRGlbExplorerTemplateElement.astro";

const response = await fetch("https://00224466.xyz/MOXR/MOXRGlbExplorer.json");
const data = await response.json();

const {files, baseUrl, thumbnailExtension} = data;
---

<div class="container">
    <div class="row">
        {files.map(file => (
                <div class="col">
                    <MOXRGlbExplorerTemplateElement file={file} baseUrl={baseUrl}
                                                    thumbnailExtension={thumbnailExtension}/>
                </div>
        ))}
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

            .col {
        max-width: 100%;
    }
</style>